<h1>Listing tags</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td class="tagcloud<%=tag.count%>"><%=h tag.name %></td>
    <td><%=h tag.count %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<div id="cloud">

<% @tags.each do |tag| %>
  <ul>
    <li value="<%= tag.count*2 %>" ><%=h tag.name %></td>
  </ul>
<% end %>


</div>

<br />

<%= link_to 'New tag', new_tag_path %>
