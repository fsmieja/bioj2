<h1>New event</h1>

<%= form_for(@event) do |f| =%>
  <%= f.error_messages %>

  <p>
    <%= f.label :date %><br />
    <%= f.date_select(:date, :order => [:day, :month, :year], :start_year => 1990) %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => 50 %>
  </p>
  <p>
    <%= f.label :summary %><br />
    <%= f.text_area :summary, :rows => 5, :cols => 120 %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => 5, :cols => 120 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>
